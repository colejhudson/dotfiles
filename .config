#!/usr/bin/env fish

function source_iff_exists -a path
  if test -f $path
    bass source $path
  end
end

if test -d $HOME/.opam
  bass source $HOME/.opam/opam-init/init.sh > /dev/null 2> /dev/null; or true
end

source_iff_exists /Users/work/.nix-profile/etc/profile.d/nix.sh
source_iff_exists $HOME/.fzf.bash
